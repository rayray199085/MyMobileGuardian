<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginLeft="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:text="App Name"
              android:textSize="25sp"
              android:textStyle="bold"
              android:textColor="#000000"
              android:id="@+id/tv_blocked_page_app_name"
              android:layout_height="wrap_content"/>
    <ImageView android:layout_width="50dp"
               android:layout_marginTop="5dp"
               android:background="@drawable/star"
               android:id="@+id/iv_blocked_page_app_icon"
               android:layout_height="50dp"/>
    <EditText android:layout_width="200dp"
              android:password="true"
              android:textSize="20sp"
              android:id="@+id/et_blocked_page_password"
              android:layout_marginTop="5dp"
              android:hint="Enter the password"
              android:layout_height="wrap_content"/>
    <Button android:layout_width="wrap_content"
            android:background="@drawable/reset_security_bg"
            android:text="@string/submit_button"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:id="@+id/btn_blocked_page_submit"
            android:layout_height="wrap_content"/>


</LinearLayout>