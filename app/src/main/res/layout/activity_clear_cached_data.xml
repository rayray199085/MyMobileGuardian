<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView style="@style/titleTheme"
                  android:text="@string/clear_cached_data_title"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_clear_cached_data_broom_icon"
                   android:background="@drawable/broom"
                   android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ProgressBar android:layout_width="match_parent"
                 android:layout_margin="5dp"
                 android:progressDrawable="@drawable/progress_bar_bg"
                 android:id="@+id/pb_clear_cached_data_progress_bar"
                 style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                 android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_clear_cached_data_scan_status"
              android:text="scan finished"
              android:textSize="20sp"
              android:layout_marginLeft="5dp"
              android:layout_height="wrap_content"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/ll_clear_cached_data_content"
                      android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>

</LinearLayout>