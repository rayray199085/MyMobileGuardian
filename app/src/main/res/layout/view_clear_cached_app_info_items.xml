<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:id="@+id/ll_app_cached_info_clear_single_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="50dp"
              android:layout_margin="5dp"
               android:background="@drawable/star"
               android:id="@+id/iv_app_cached_data_info_icon"
               android:layout_height="50dp"/>
    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:gravity="center"
                  android:text="app name"
                  android:textSize="15sp"
                  android:id="@+id/tv_app_cached_data_info_app_name"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:text="cached data size: 1020kb"
                  android:id="@+id/tv_app_cached_data_info_cache_size"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:background="@drawable/rubbish_bin"
               android:layout_height="wrap_content"/>
</LinearLayout>