<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:textStyle="bold"
              android:textSize="30sp"
              android:background="@drawable/dialog_title_bar9"
              android:textColor="#ffffff"
              android:text="@string/login_confirm_password"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:hint="@string/init_dg_enter_psw_hint"
              android:textSize="25sp"
              android:id="@+id/et_dg_confirm_password"
              android:password="true"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:weightSum="2"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textColor="#2B2E2F"
                android:id="@+id/btn_dg_confirm_password_cancel"
                android:text="@string/cancel_button"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="25sp"
                android:textColor="#2B2E2F"
                android:id="@+id/btn_dg_confirm_password_confirm"
                android:text="@string/confirm_button"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>