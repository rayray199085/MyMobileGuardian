<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<ImageView android:layout_width="50dp"
           android:background="@mipmap/ic_launcher"
           android:id="@+id/iv_apps_manager_icon"
           android:layout_height="50dp"/>
    <LinearLayout
            android:layout_toRightOf="@+id/iv_apps_manager_icon"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="2"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:text="Apps Name"
                  android:id="@+id/tv_apps_manager_apps_name"
                  android:layout_weight="1"
                  android:textSize="15sp"
                  android:gravity="center"
                  android:layout_marginBottom="5dp"
                  android:layout_height="0dp"/>
        <TextView android:layout_width="match_parent"
                  android:text="Apps Type"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="15sp"
                  android:id="@+id/tv_apps_manager_apps_type"
                  android:layout_height="0dp"/>

    </LinearLayout>
</RelativeLayout>